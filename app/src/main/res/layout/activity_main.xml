<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Your!"
        android:textColor="#9AE4EE"
        android:textSize="29sp"
        android:textStyle="bold|italic"
      />

    <TextView
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/teal_200"
        android:text="AGE"
        android:textAlignment="center"
        android:textColor="#303F9F"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="In Minutes"
        android:textColor="#23F17F"
        android:textSize="29sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Date"
        android:textColor="@color/white"
        android:textColorHighlight="#DEDB11" />

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="30.2.12"
        android:textColor="#D2F90F"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selected Date"
        android:textColor="#C3EE9A"
        android:textSize="29sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAgeinmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="140000"
        android:textColor="#D2F90F"
        android:textSize="40dp"
        android:textStyle="italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="In minutes till date"
        android:textColor="#D2F90F"
        android:textSize="20sp"
        android:textStyle="italic" />


</LinearLayout>